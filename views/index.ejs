<%- include('layout/header')%>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
     <h1 class="my-4 text-center">User List</h1>
     <div class="table-responsive">
          <table class="table table-striped text-center">
               <thead>
                    <tr class="table-dark">
                         <th>ID</th>
                         <th>Image</th>
                         <th>Name</th>
                         <th>Email</th>
                         <th>Phnoe</th>
                         <th>Action</th>
                    </tr>
               </thead>
               <tbody>
                    <% if (users.length > 0) { %>
                         <% users.forEach((user, index) => { %>
                             <tr class="align-middle">
                                 <td><%= index + 1 %></td> <!-- Assuming ID is the index -->
                                 <td>
                                     <% if (user.image) { %>
                                         <img src="<%= user.image %>" width="50" class="img-thumbnail">
                                     <% } else { %>
                                         No Image
                                     <% } %>
                                 </td>
                                 <td><%= user.name %></td>
                                 <td><%= user.email %></td>
                                 <td><%= user.phone %></td>
                                 <td>
                                     <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                     <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                 </td>
                             </tr>
                         <% }) %>
                     <% } else { %>
                         <tr>
                             <td colspan="6" class="text-center">No users found.</td>
                         </tr>
                     <% } %>
               </tbody>
          </table>
     </div>
    </div>
  </div>
</div>

<%- include('layout/footer')%>
